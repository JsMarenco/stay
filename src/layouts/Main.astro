---
// Third-party dependencies

// Current project dependencies
import BaseHead from "../components/Common/BaseHead.astro";
import Header from "../components/Common/Header.astro";
import Footer from "../components/Common/Footer.astro";
import ScrollTop from "../components/Buttons/ScrollTop";
import ThemeSwitcher from "../components/Buttons/ThemeSwitcher";
import cn from "../utils/cn";
import AuthGuard from "../components/Common/AuthGuard.tsx";

type Props = {
  title?: string;
  description?: string;
  image?: string;
  containerClassnames?: string;
};

const {
  title = "",
  description = "",
  image = "",
  containerClassnames,
} = Astro.props;
---

<html lang="es">
  <head>
    <BaseHead description={description} image={image} title={title} />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body
    class="flex min-h-screen flex-col text-black transition-colors duration-200 dark:text-white"
  >
    <AuthGuard client:load />

    <div id="modals"></div>

    <Header />

    <main
      class:list={cn(
        "mx-auto my-3 w-full max-w-5xl flex-1 overflow-auto",
        containerClassnames || "",
      )}
      transition:animate="fade"
    >
      <slot />
    </main>

    <div
      class="fixed right-4 bottom-4 z-[90] flex flex-col items-center justify-center gap-2"
    >
      <ScrollTop client:load />
      <ThemeSwitcher client:load />
    </div>

    <div
      class="animate-gradientBackground fixed inset-0 -z-20 bg-gradient-to-tr from-gray-200 via-gray-100 to-gray-300 dark:from-gray-950 dark:via-gray-800 dark:to-gray-900"
    >
    </div>

    <Footer />
  </body>
</html>
